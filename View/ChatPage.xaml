<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    Title="Chat"
    x:Class="Conda_AI.View.ChatPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:converters="clr-namespace:Conda_AI.Converters"
    xmlns:model="clr-namespace:Conda_AI.Model"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:MessageAlignmentConverter x:Key="MessageAlignmentConverter" />
            <converters:MessageBackgroundConverter x:Key="MessageBackgroundConverter" />
            <converters:MessageTextColorConverter x:Key="MessageTextColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>


    <Grid
        ColumnDefinitions="Auto,*"
        RowDefinitions="*">
        <!-- Chat Content -->
        <Grid
            Grid.Column="1"
            ColumnDefinitions="*"
            Padding="10"
            RowDefinitions="Auto,Auto,*,Auto">

            <!-- Discussion Header -->
            <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto,Auto,Auto" Margin="0,0,0,10" IsVisible="{Binding HasCurrentDiscussion}">
                <Button Grid.Column="0" ImageSource="arrow_back.png" FontSize="20" Command="{Binding NavigateToDiscussionsCommand}" BackgroundColor="Transparent" />

                <Grid Grid.Column="1" ColumnDefinitions="*,Auto">
                    <Label Grid.Column="0" Text="{Binding CurrentDiscussion.Title}" FontSize="18" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Start" />
                    <Button Grid.Column="1" ImageSource="edit.png" FontSize="16" Command="{Binding RenameDiscussionCommand}" BackgroundColor="Transparent" WidthRequest="40" Margin="0" Padding="0" />
                </Grid>

                <Button Grid.Column="2" ImageSource="trash.png" FontSize="16" Command="{Binding DeleteDiscussionCommand}" BackgroundColor="Transparent" Margin="0,0,5,0" />
                <Button Grid.Column="4" ImageSource="plus.png" FontSize="20" Command="{Binding CreateNewDiscussionCommand}" BackgroundColor="Transparent" />
            </Grid>

            <!--  Header Banner  -->
            <VerticalStackLayout
            Grid.Row="1"
            Grid.RowSpan="2"
            HorizontalOptions="Center"
            IsVisible="{Binding IsWelcomeTextVisible}"
            Padding="0"
            VerticalOptions="Center">
                <Label
                FontAttributes="Bold"
                FontSize="32"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Margin="0,20,0,10"
                Padding="0"
                Text="{Binding WelcomeText}" />
                <Label
                FontSize="18"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Margin="0"
                Text="Wie kann ich dir helfen?" />
            </VerticalStackLayout>

            <!--  Chat area with messages  -->
            <Grid Grid.Row="2" IsVisible="{Binding isWelcomeTextNotVisible}">
                <CollectionView ItemsSource="{Binding MessageGroups}" VerticalOptions="FillAndExpand">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:MessageGroup">
                            <StackLayout>
                                <!-- Date Header -->
                                <Frame BackgroundColor="#f0f0f0" Padding="10,5" Margin="0,10,0,5" CornerRadius="10" HorizontalOptions="Center">
                                    <Label Text="{Binding Date}" FontAttributes="Bold" TextColor="#444" HorizontalOptions="Center" />
                                </Frame>

                                <!-- Messages for this date -->
                                <CollectionView ItemsSource="{Binding Messages}" SelectionMode="None">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="model:Message">
                                            <Grid Padding="5">
                                                <Border
                                                Background="{Binding Author, Converter={StaticResource MessageBackgroundConverter}}"
                                                HorizontalOptions="{Binding Author, Converter={StaticResource MessageAlignmentConverter}}"
                                                Margin="0,2"
                                                Padding="10"
                                                Stroke="Transparent"
                                                StrokeShape="RoundRectangle 10">
                                                    <StackLayout>
                                                        <Label
                                                        MaximumWidthRequest="300"
                                                        Text="{Binding Content}"
                                                        TextColor="{Binding Author, Converter={StaticResource MessageTextColorConverter}}" />
                                                        <Label 
                                                        Text="{Binding CreatedAt, StringFormat='{0:HH:mm}'}"
                                                        FontSize="10"
                                                        TextColor="{Binding Author, Converter={StaticResource MessageTextColorConverter}}"
                                                        Opacity="0.7"
                                                        HorizontalOptions="End" />
                                                    </StackLayout>
                                                </Border>
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <ActivityIndicator 
                IsVisible="{Binding IsBusy}"
                IsRunning="{Binding IsBusy}"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>

            </Grid>

            <!--  Input bar  -->
            <StackLayout
            Grid.Row="3"
            Orientation="Horizontal"
            Padding="10"
            Spacing="5"
            VerticalOptions="End">
                <Entry
                HorizontalOptions="FillAndExpand"
                Placeholder="Schreibe etwas..."
                Text="{Binding CurrentMessage, Mode=TwoWay}" />

                <Border Padding="0" Style="{StaticResource CardBorderStyle}">
                    <Button
                    Background="Transparent"
                    BackgroundColor="#007bff"
                    Command="{Binding SendMessageCommand}"
                    CommandParameter="{Binding CurrentMessage}"
                    FontAttributes="Bold"
                    HorizontalOptions="End"
                    ImageSource="paper_plane.png"
                    TextColor="White" />
                </Border>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>