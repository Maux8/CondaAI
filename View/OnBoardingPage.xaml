<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="Conda_AI.View.OnBoardingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>

        <VerticalStackLayout
            HorizontalOptions="Center"
            Spacing="30"
            VerticalOptions="Center">
            <VerticalStackLayout HorizontalOptions="Center">
                <Label
                    FontAttributes="Bold"
                    FontSize="25"
                    Text="Wilkommen zu Conda AI" />
                <Label HorizontalOptions="Center" Text="Geben Sie Ihren Namen ein" />
            </VerticalStackLayout>

            <Entry Placeholder="Name" x:Name="NameEntry" />
            <Button
                Clicked="RegisterButton_OnClicked"
                Text="Fortfahren"
                x:Name="RegisterButton" />
        </VerticalStackLayout>

    </ContentPage.Content>
</ContentPage>